
{% extends 'AndaimeFrontendBundle::layout.html.twig' %}

{% block title %}produtos{% endblock %}
{% block global %}indent{% endblock %}
{% block produtos %}active{% endblock %}
{% block body %}

<script>
   $(window).load(function() {
     // Initialize the gallery
    $('.thumb-pad7 figure a').touchTouch();
  });
  </script> 
 <div class="container">
        <div class="row">
            <article class="col-lg-12 col-md-12 col-sm-12 productBox">
                <h2>nossos produtos<em></em></h2>
                <div class="row">
                	{% for product in products %}
                    <article class="col-lg-3 col-md-3 col-sm-4 col-xs-6 maxheight">
                        <div class="thumb-pad7">
                            <div class="thumbnail">
                                <figure><a href="{{ asset(product.pic) }}"><img src="{{ asset(product.pic) }}" alt=""></a></figure>
                                <div class="caption">
                                    <a href="#" class="lnk">{{ product.name }}</a>
                                    <p>{{ product.description }}</p>
                                    
                                </div>
                            </div>
                        </div>
                    </article>

					{% endfor %}
                    
                </div>
            </article>
        </div>
    </div>
{% endblock %}