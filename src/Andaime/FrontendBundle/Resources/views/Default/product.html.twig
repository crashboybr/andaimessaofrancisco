
{% extends 'AndaimeFrontendBundle::layout.html.twig' %}

{% block title %}produtos{% endblock %}
{% block global %}indent{% endblock %}
{% block produtos %}active{% endblock %}
{% block body %}

 <div class="container">
        <div class="row">
            <article class="col-lg-12 col-md-12 col-sm-12 productBox">
                <h2>nossos produtos<em></em></h2>
                <div class="row">
                	{% for product in products %}
                    <article class="col-lg-3 col-md-3 col-sm-4 col-xs-6 maxheight">
                        <div class="thumb-pad7" style="">
                            <div class="thumbnail">
                                <figure><a href="{{ path('andaime_frontend_view_product', { 'product': product.id }) }}"><img src="{{ asset(product.pic) }}" alt="" style="width: 200px; height: 200px;"></a></figure>
                                <div class="caption">
                                    <a href="{{ path('andaime_frontend_view_product', { 'product': product.id }) }}" class="lnk">{{ product.name }}</a>
                                    
                                </div>
                            </div>
                        </div>
                    </article>

					{% endfor %}
                    
                </div>
            </article>
        </div>
    </div>
{% endblock %}