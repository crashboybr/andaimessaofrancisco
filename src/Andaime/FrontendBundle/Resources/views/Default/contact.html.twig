
{% extends 'AndaimeFrontendBundle::layout.html.twig' %}

{% block title %}contato{% endblock %}
{% block global %}indent{% endblock %}
{% block contato %}active{% endblock %}
{% block body %}
 <div class="container">
        <div class="row">
            <article class="col-lg-12 col-md-12 col-sm-12">
                <h2>contato<em></em></h2>

            </article>
            <section class="formBox clearfix">
                <article class="col-lg-4 col-md-4 col-sm-4 info">
                    <h2>endereços<em></em></h2>
                    <h5>Matriz:</h5>
                    <p>Estrada Engenheiro Pacheco de Carvalho - 817 <br /> Pendotiba (Paineiras) - Niterói - RJ
                    <br />(21) 2714-6363 / 2612-1139</p>
                </article>
                <article class="col-lg-8 col-md-8 col-sm-8">
                    {% for label, flashes in app.session.flashbag.all %}
{% for flash in flashes %}
<div class="alert alert-{{ label }}">
{{ flash }}
</div>
{% endfor %}
{% endfor %}
                    <h2>deixe sua mensagem<em></em></h2>
                    
                     <form id="contact-form" action="{{ path('andaime_frontend_contact') }}" novalidate form_enctype(form)="" method="post">
                    {{ form_start(form, { attr: { 'novalidate': 'novalidate' }}) }}
                    <form id="contact-form">
                        <div class="success-message">Enviado com sucesso.</div>
                        <div class="holder">
                            <div class="form-div-1 clearfix">
                                <p>Nome*</p>
                                
                                <label class="name">
                                    {{ form_widget(form.name) }}
                                    {{ form_errors(form.name) }}
                                </label>
                            </div>

                            <div class="form-div-2 clearfix">
                                <p>E-mail*</p>
                                <label class="email">
                                    {{ form_widget(form.email) }}
                                    {{ form_errors(form.email) }}
                                </label>
                            </div>
                            <div class="form-div-3 clearfix">
                                <p>Assunto*</p>
                                <label class="phone">
                                    {{ form_widget(form.subject) }}
                                    {{ form_errors(form.subject) }}
                                </label>
                            </div>
                        </div>
                        <div class="form-div-4 clearfix">
                            <p>Mensagem*</p>
                            <label class="message">
                                    {{ form_widget(form.message) }}
                                    {{ form_errors(form.message) }}
                                </label>
                        </div>
                        <div class="btns">
                            <button type="submit" class="btn-default btn1">enviar</button>
                            <p>* campos obrigatórios</p>
                        </div>  
                    {{ form_end(form) }}
                </article>
            </section>
        </div>
    </div>
{% endblock %}